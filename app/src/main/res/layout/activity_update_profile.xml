<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateProfile">



    <FrameLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:id="@+id/backButtonWraperofSecurity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_baseline_arrow_back" />

    </FrameLayout>
    <TextView
        android:id="@+id/titleSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Update Your profile"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:textAllCaps="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/manageWrapper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="20dp"
            android:layout_height="20dp"


            android:src="@drawable/ic_person" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleSettings">

        <LinearLayout
            android:id="@+id/updateprofilemenue"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center|start"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_person" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="2dp"
                android:text="Edit Profile"
                android:textColor="@color/black"
                android:textSize="20dp"
                app:layout_constraintTop_toBottomOf="parent" />


        </LinearLayout>
<ScrollView
    android:layout_width="wrap_content"
    android:layout_gravity="center"
    android:layout_height="wrap_content">
        <LinearLayout

            android:id="@+id/updateprofilelayout"
            android:layout_width="match_parent"
            android:layout_height="632dp"
            android:background="@color/white"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="302dp"
                android:layout_height="wrap_content"
                android:text="You can set preferred display name,
                create your profile URL and manage other personal settings." />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="23dp" />

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="35dp"
                    android:background="@drawable/ic_launcher_foreground"
                    app:cardCornerRadius="35dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/username">

                    <ImageView
                        android:id="@+id/ImageProfile"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clipToOutline="true"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/avatar" />

                </androidx.cardview.widget.CardView>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="149dp"
                        android:layout_height="wrap_content"
                        android:text="Profile photo"
                        android:textColor="@android:color/black" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="20dp" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="194dp"
                        android:layout_height="58dp"
                        android:text="We recommend an image of at least 400x400.  ðŸ™Œ" />

                    <Button
                        android:id="@+id/changeImage"
                        android:layout_width="100dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center_horizontal"

                        android:background="@null"
                        android:backgroundTint="@color/white"
                        android:text="upload"
                        android:textAllCaps="false"
                        android:textColor="@color/Roman_Silver"


                        />
                </LinearLayout>
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />
            <View
                android:id="@+id/divideraccountinfo"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />
            <TextView
                android:id="@+id/Account"
                android:layout_width="match_parent"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:text="Account info" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <TextView
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:textColor="@color/Roman_Silver"
                android:layout_height="wrap_content"
                android:text=" EMAIL" />



            <EditText
                android:id="@+id/txtNewEmail"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@drawable/btndesign"
                android:hint="Enter New Email"
                android:inputType="textEmailAddress"
                android:minHeight="48dp"
                android:paddingLeft="12dp"
                android:shadowColor="@color/Mint_Cream"
                android:shadowDx="@integer/material_motion_duration_long_1"
                android:shadowDy="@integer/material_motion_duration_long_1"
                android:textColor="@color/black"
                android:textColorHint="@color/Roman_Silver" />
            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />
            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:textColor="@color/Roman_Silver"
                android:layout_height="wrap_content"
                android:text=" DISPLAY NAME " />

            <EditText
                android:id="@+id/txtNewName"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@drawable/btndesign"
                android:hint="Enter New Name"
                android:minHeight="48dp"
                android:paddingLeft="12dp"
                android:shadowColor="@color/Mint_Cream"
                android:shadowDx="@integer/material_motion_duration_long_1"
                android:shadowDy="@integer/material_motion_duration_long_1"
                android:textColor="@color/black"
                android:textColorHint="@color/Roman_Silver" />
            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />
            <TextView
                android:id="@+id/url"
                android:layout_width="match_parent"
                android:textColor="@color/Roman_Silver"
                android:layout_height="wrap_content"
                android:text=" CUSTOM URL" />

            <EditText
                android:id="@+id/txtNewUrl"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@drawable/btndesign"
                android:hint="Enter New Url"
                android:inputType="textUri"
                android:minHeight="48dp"
                android:paddingLeft="12dp"
                android:shadowColor="@color/Mint_Cream"
                android:shadowDx="@integer/material_motion_duration_long_1"
                android:shadowDy="@integer/material_motion_duration_long_1"
                android:textColor="@color/black"
                android:textColorHint="@color/Roman_Silver" />
            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />
            <TextView
            android:id="@+id/bio"
            android:layout_width="match_parent"
            android:textColor="@color/Roman_Silver"
            android:layout_height="wrap_content"
            android:text=" BIO" />

            <EditText
                android:id="@+id/txtNewBio"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/btndesign"
                android:hint="Bio"
                android:inputType="textMultiLine"
                android:lines="4"

                android:paddingLeft="12dp"
                android:shadowColor="@color/Mint_Cream"
                android:shadowDx="@integer/material_motion_duration_long_1"
                android:shadowDy="@integer/material_motion_duration_long_1"
                android:textColor="@color/black"
                android:textColorHint="@color/Roman_Silver" />
            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />
            <TextView
                android:id="@+id/wallet"
                android:layout_width="match_parent"
                android:textColor="@color/Roman_Silver"
                android:layout_height="wrap_content"
                android:text="WALLET ADDRESS" />

            <EditText
                android:id="@+id/txtNewWalletAdress"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@drawable/btndesign"
                android:hint=" Wallet Adress "
                android:inputType="textEmailAddress"
                android:minHeight="48dp"
                android:paddingLeft="12dp"
                android:shadowColor="@color/Mint_Cream"
                android:shadowDx="@integer/material_motion_duration_long_1"
                android:shadowDy="@integer/material_motion_duration_long_1"
                android:textColor="@color/black"
                android:textColorHint="@color/Roman_Silver" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/BtnSubmit"
                android:layout_width="200dp"

                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@drawable/btndesign"
                android:backgroundTint="@color/design_default_color_primary_dark"
                android:minHeight="48dp"
                android:text="SUBMIT"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <View
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />


        </LinearLayout>
</ScrollView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>